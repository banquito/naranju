.nav-docs
  background $kuler2
  position fixed
  left 4em
  height 100%
  width 14em
  overflow auto
  h2
    margin .2em 0.5em 0.5em
    color #fff
  
  h4
    margin 0.5em
  ul
    margin 0
    list-style none
    padding 0
    li
      a
        color #fff
        font-size 1em
        padding 0 1em
        display block
      &.active a,
      a:hover
        border-right 2px solid $kuler1
        color $kuler1
        text-decoration none