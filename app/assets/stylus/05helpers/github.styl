.github-fork-ribbon-wrapper
  height 150px
  overflow hidden
  position fixed
  top 0
  right 0
  width 150px
  z-index 9999

  .github-fork-ribbon
    background-color #AA0000
    background-image -moz-linear-gradient(center top , rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.15))
    box-shadow 0 2px 3px 0 rgba(0, 0, 0, 0.5)
    padding 2px 0
    position absolute
    z-index 9999
    right -43px
    top 42px
    transform rotate(45deg)
    a, 
    a:hover
      border-color rgba(255, 255, 255, 0.698)
      border-style dotted
      border-width 1px 0
      color #FFFFFF
      display inline-block
      font-family "Helvetica Neue", Helvetica, Arial, sans-serif
      font-size 13px
      font-weight 700
      line-height 20px
      padding 2px 0
      text-align center
      text-decoration none
      text-shadow 0 -1px rgba(0, 0, 0, 0.5)
      width 200px

