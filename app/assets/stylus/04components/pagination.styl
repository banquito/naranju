pagination()
  display: block
  list-style: none
  margin: 0
  text-align: center
  li
    display: inline-block
    min-width: 30px
    text-align: center
    a
      display: block
      padding: 5px 10px
      background: #f0f2f5
      color: #555
      border-left: 1px solid #fff
      transition: background .2s
      &:hover
        background: rgb(247,247,247)
      &.active
        background: $kuler1
        cursor: default
        color: #fff
    &.prev a
      border-left: none
      border-radius: 3px 0 0 3px
    &.next a
      border-radius: 0 3px 3px 0
