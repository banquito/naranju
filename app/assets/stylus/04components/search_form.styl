
/* search
-------------------------------------------------------------- */

search_form()  
  padding 10px
  margin 0
  border-bottom 1px solid lighten(#5c5c5c, 5%)
  p
    margin-bottom 0
  input
    border none
    background #fff
    padding 5px
    margin-right 10px
    border-radius 3px
    width 150px
  button  
    button()
    mixIcon($icon-search)
    size auto 29px
    box-sizing border-box
    &:before
      margin-right 0
