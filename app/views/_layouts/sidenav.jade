include elements/gallery
include elements/forms
include elements/slider
include elements/nav
doctype html
html(lang="en")
  include includes/head
  body#sidemenu
    #sidemenu.sidemenu
      a(href="#sidemenu")
      a(href="#sidemenuclose")
      nav
        aside.user-box
          - if(global.user !== 'null')
            figure
              - if(global.user.image)
                img(src=global.user.image)
            h4= global.user.name
            p= global.user.provider + ' | '
              a(href="#") Signout
        +search_form('#', 'Buscar')

        +nav('', global.nav)
    #page
      .wrapper
        block nav
      block content
      include includes/foot
