article
  h3(id="formularios") Formularios
  h4 Formulario horizontal
  .panels
    +nav('docs-tabs tabs', 
      [ {link:'#preview', name:"preview"}, 
        {link:'#jade', name:"jade"}, 
        {link:'#stylus', name:"stylus"}
      ])
    div.pane
      form.hform
        p: +formInput('text', 'nombre', 'Nombre', '')
        p: +formInput('text', 'email', 'Correo', '')
        p: +formSelect(
          'asunto', 'Pais', [
            {'name':'Argentina','value':'ar'},
            {'name':'Brasil','value':'br'}, 
            {'name':'Uruguay','value':'uy'}
          ]
        )
        p: +formTextarea('Mensaje', 'mensaje', '')
        p.checkbox: +formRadio('sexo', [{'label':'Hombre','value':'h'},{'label':'Mujer','value':'m'}])
        p.checkbox: +formCheckbox('info', 'Acepto los términos y condiciones', '1')
        p: button.button-big Enviar
    div.pane.code
      pre
        code
          | form.hform
          |   p: +formInput('text', 'nombre', 'Nombre', '')
          |   p: +formInput('text', 'email', 'Correo', '')
          |   p: +formSelect(
          |     'asunto', 'Pais', [
          |       {'name':'Argentina','value':'ar'},
          |       {'name':'Brasil','value':'br'}, 
          |       {'name':'Uruguay','value':'uy'}
          |     ]
          |   )
          |   p: +formTextarea('Mensaje', 'mensaje', '')
          |   p.checkbox: +formRadio(
          |     'sexo', 
          |     [{'label':'Hombre','value':'h'},{'label':'Mujer','value':'m'}]
          |   )
          |   p.checkbox: +formCheckbox('info', 'Acepto los términos y condiciones', '1')
          |   p: button.button-big Enviar
    div.pane.code
      pre
        code
          | [class*="button"] { .mixButton(); }
          | .button-big { .mixButtonSize(2.4); }
          | form.hform  { .mixFormHorizontal(); }

